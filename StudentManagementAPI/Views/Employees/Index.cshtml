@model IEnumerable<EmployeeManagementAPI.Models.Employees>

<h2>Employees List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>DOB</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeID</td>
                <td>@employee.EmployeeName</td>
                <td>@employee.DOB.ToShortDateString()</td>
                <td>@employee.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Add New Employee</a>

