@model EmployeeManagementAPI.Models.Payrolls

<h2>Delete Payroll</h2>

<h3>Are you sure you want to delete this payroll?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Payroll ID
        </dt>
        <dd class="col-sm-10">
            @Model.PayrollID
        </dd>
        <dt class="col-sm-2">
            Payroll Method
        </dt>
        <dd class="col-sm-10">
            @Model.PaymentMethod
        </dd>
        <dt class="col-sm-2">
            Account Number
        </dt>
        <dd class="col-sm-10">
            @Model.BankAccount
        </dd>
        <dt class="col-sm-2">
            Type Of Bank
        </dt>
        <dd class="col-sm-10">
            @Model.BankName
        </dd>
        <dt class="col-sm-2">
            Payroll Date
        </dt>
        <dd class="col-sm-10">
            @Model.PayrollDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount
        </dd>
        <dt class="col-sm-2">
            Remarks
        </dt>
        <dd class="col-sm-10">
            @Model.Remarks
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PayrollID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
